<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:contentDescription="@string/logo"
            android:layout_width="39sp"
            android:layout_height="39sp"
            android:layout_marginStart="148sp"
            android:layout_marginTop="30sp"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/name"
            android:contentDescription="@string/name"
            android:layout_width="135dp"
            android:layout_height="22dp"
            android:layout_marginStart="105dp"
            app:srcCompat="@drawable/name" />

        <ImageView
            android:id="@+id/sign_up"
            android:layout_width="70sp"
            android:contentDescription="@string/sign"
            android:layout_height="20sp"
            android:layout_marginStart="135sp"
            android:layout_marginTop="15sp"
            app:srcCompat="@drawable/sign1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="251dp"
        android:layout_marginEnd="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/phone_txt"
            android:contentDescription="@string/phone"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/emai" />

        <ImageView
            android:id="@+id/email_txt"
            android:contentDescription="@string/email"
            android:layout_width="52dp"
            android:layout_height="20dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="669dp"
            app:srcCompat="@drawable/email" />


    </LinearLayout>


    <ImageView
        android:id="@+id/line1"
        android:layout_width="300dp"
        android:contentDescription="@string/line"
        android:layout_height="wrap_content"
        android:layout_marginTop="295dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="70dp"
        app:srcCompat="@drawable/line" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="301dp"
        android:layout_marginEnd="31dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editTextNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:autofillHints="phone"
            android:background="@drawable/box"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="phone"
            android:paddingStart="20dp"
            android:paddingEnd="5dp"
            android:textColor="#AAC2FB"
            android:textColorHint="@color/text" />

        <ImageView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/sms"
            app:srcCompat="@drawable/may" />

        <Button
            android:id="@+id/button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="45sp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="45dp"
            android:accessibilityLiveRegion="polite"
            android:background="@drawable/next_button"
            android:backgroundTint="@color/cardview_shadow_end_color"
            android:backgroundTintMode="src_over"
            android:text="@string/next"
            android:textSize="15sp"
            tools:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="125dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="21dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/already"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:ems="10"
            android:text="@string/account"
            android:textColor="@color/text" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="@string/in"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>
